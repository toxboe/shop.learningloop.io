        {% endif %}
        {% if autoplay_mode == 'one_at_time' %}
          data-animation-type="one_at_time"
          data-autoplay-interval='{{autoplay_interval}}'
        {% endif %}
        {% if autoplay_mode == 'seamless' %}
          data-loop
          data-drag-free
          data-animation-type="seamless"
          data-autoplay-interval='{{autoplay_interval}}'
        {% endif %}
        data-contain-scroll='trimSnaps'
        with-stop-on-hover
        data-draggable
        data-align="start"
        data-axis="x"
      >
        <div
          class='carousel__viewport carousel__viewport--overflow collection__tab-carousel-viewport embla'
