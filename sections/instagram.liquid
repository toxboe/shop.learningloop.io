    <div class='instagram__container container container--{{ container_size }} section-spacing {% if container_size == 'full-screen' %} instagram__container--full-screen{% endif %}'>
      {{ heading }}

      {%- if section.blocks.size > 0 -%}
        {% if desktop_layout != 'grid' %}
          {{ desktop_carousel }}
        {% else %}
          <div class='instagram__blocks'>
            <div class='card-grid instagram__card-grid'>
              {%- for block in section.blocks -%}
                {%- liquid
                  assign image = block.settings.image
                  assign video = block.settings.video
                  assign link = block.settings.link
                  assign icon = block.settings.icon
                -%}
                <div
                  class='instagram__card-grid-item instagram__item zoom-parent-for-hover card-grid__item block-{{ block.id }}'
                  {{ block.shopify_attributes }}
                >
                  <div class='instagram__image-wrapper shape shape--nature'>
                    {%- if link != blank -%}
                      <a
                        class='overlay instagram__link-overlay unstyled-link'
                        href='{{ link.url }}'
                        target='_blank'
                        aria-label='Instagram'
                      >
                        {%- if icon != 'none' -%}
                          {% render 'icon-pack', icon: icon, class: 'instagram__icon' %}
                        {%- endif -%}
                      </a>
                    {%- endif -%}
                    {%- if video != blank -%}
                      {% render 'video-with-alt',
                        video: video,
                        class: 'image instagram__image',
                        autoplay: true,
                        loop: true,
                        muted: true,
                        controls: false,
                        loading: 'lazy'
                      %}
                    {%- elsif image != blank -%}
                      <img
                        {% render 'image-attributes', image: image, class: 'image instagram__image zoom' %}
                      >
                    {%- else -%}
                      {{ 'image' | placeholder_svg_tag: 'instagram__image placeholder-image zoom' }}
                    {%- endif -%}
                  </div>
                </div>
              {%- endfor -%}
            </div>
          </div>
        {% endif %}
      {%- endif -%}

      {%- if btn_text != blank -%}
        <a
          {% if btn_url != blank %}
            href='{{ btn_url }}'
          {% endif %}
          class='btn btn--{{ btn_style }} instagram__btn'
          aria-label='{{ btn_text }}'
        >
          {{- btn_text -}}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

