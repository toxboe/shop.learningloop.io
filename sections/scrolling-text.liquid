{% style %}
  .section-{{section.id}} {
      --gsc-section-spacing-top: {{ section.settings.section_spacing_top }}px;
      --gsc-section-spacing-bottom: {{ section.settings.section_spacing_bottom }}px;
      --gsc-section-rotation: {{ section.settings.inclination_degree }}deg;
      --gsc-section-background_img_opacity: {{ section.settings.overlay_opacity | divided_by: 100.000 }};

      {%if section.settings.inclination_degree > 0 %}
          --gsc-section-rotation-negative: -{{ section.settings.inclination_degree }}deg;
      {% else %}
          --gsc-section-rotation-negative: {{ section.settings.inclination_degree | abs }}deg;
      {%endif%}

      {%if section.settings.section_layout == "crossed" and section.blocks.size > 1 %}
          --gsc-section-transform-origin: {{ section.settings.crossing_point_position }}%;
      {%endif%}

      --gsc-section-translate-when-inclined: {{ section.settings.inclination_degree | divided_by: 1.5 }}%;
  }

  {% for block in section.blocks %}
    .block-{{ block.id }} {
        --gsc-section-font-size: {{ block.settings.font_size }}px;
        --gsc-section-top-and-bottom-spacing: {{ block.settings.top_and_bottom_spacing }}px;
        --gsc-section-letter-spacing: {{ block.settings.letter_spacing }}px;
        --gsc-section-icon-size: {{ block.settings.icon_size }}px;
        --gsc-section-spacing-between-messages: {{ block.settings.spacing_between_messages }}px;
        --gsc-section-scrolling-direction: {{ block.settings.scrolling_direction }};

        {% if block.settings.scrolling_speed == 0 %}
              --gsc-section-scrolling-speed: 0s;
            {% else %}
              {% assign second = block.settings.scrolling_speed | divided_by: 101.00 | times: 25 %}
              {% assign result = 26 | minus: second %}

              {% if block.settings.font_style == 'mixed' %}
                {% assign result = result | times: 2.00 %}
              {% endif %}

              --gsc-section-scrolling-speed: {{ result }}s;
        {% endif %}

        {% if block.settings.background_color_gradient == blank %}
            --gsc-section-background: {{ block.settings.background_color }};
          {% else %}
            --gsc-section-background: {{ block.settings.background_color_gradient }};
        {% endif %}

        {% if block.settings.text_color_gradient == blank %}
            --gsc-section-text-color: {{ block.settings.text_color }};
          {% else %}
            --gsc-section-text-color: {{ block.settings.text_color_gradient }};
        {% endif %}

        {%if section.settings.section_layout == "crossed" and section.blocks.size > 1 and forloop.last %}
            --gsc-section-rotate-degree: var(--gsc-section-rotation-negative);
          {% else %}
            --gsc-section-rotate-degree: var(--gsc-section-rotation);
        {%endif%}
    }
  {% endfor %}
{% endstyle %}



<scrolling-text
  class='scrolling-text-section section-{{ section.id }} color-{{ section.settings.color_scheme }}'
  data-section-id='{{ section.id }}'
>
  <div class='container container--{{ section.settings.container_size }} scrolling-text__outer-container {% if section.settings.container_size == 'full-screen' %} scrolling-text__outer-container--full-screen {% endif %}'>
    <div
      class='scrolling-text__inner-container {% if section.settings.inclination_degree != 0 %} scrolling-text__inner-container--with-overflow {% endif %} {% if section.settings.background_image == blank %}scrolling-text__inner-container--without-raduis{% endif %}'
      data-scrolling-text-container
    >
      <div class='scrolling-text__background'>
        {% if section.settings.background_image != blank %}
          <img
            {% render 'image-attributes', image: section.settings.background_image, size: 'medium', parent_fit: 'cover', class: 'scrolling-text__background-image' %}
          >
          <div class="scrolling-text__background-image-overlay"></div>
        {% endif %}
      </div>

      {% if section.settings.section_layout == 'parallel' %}
        <div class="scrolling-text__inner-container--parallel">
      {% endif %}

      {% for block in section.blocks %}
        {%- assign gradient_type = block.settings.text_color_gradient -%}
        {%- assign gradients = block.settings.text_color_gradient | replace: ' ', '' | split: 'rgba' -%}
        {%- assign gradient_degree = 0 -%}
        {%- assign icon_class = 'scrolling-text__icon' -%}

        {% if gradient_type contains 'radial' %}
          {%- assign gradient_degree = block.settings.text_color_gradient
            | replace: 'radial-gradient(', ''
            | times: 1
          -%}
        {% else %}
          {%- assign gradient_degree = block.settings.text_color_gradient
            | replace: 'linear-gradient(', ''
            | times: 1
          -%}
        {% endif %}

        {% capture x1 %}{% if gradient_degree > 230 and gradient_degree < 360 %}1{% else %}0{% endif %}{% endcapture %}
        {% capture x2 %}{% if gradient_degree > 45 and gradient_degree < 150 or gradient_degree == 360 %}1{% else %}0{% endif %}{% endcapture %}
        {% capture y1 %}{% if gradient_degree > 0 and gradient_degree < 90 or gradient_degree > 315 and gradient_degree < 360 %}1{% else %}0{% endif %}{% endcapture %}
        {% capture y2 %}{% if gradient_degree > 90 and gradient_degree < 230 %}1{% else %}0{% endif %}{% endcapture %}

        {% if block.settings.announcement_text != blank %}
          <scrolling-text-line class='block-{{ block.id }} block-wrapper {% if section.settings.container_size == 'full-screen' %} block-wrapper--full-screen {% endif %} {% if section.settings.section_layout == "crossed" and section.settings.inclination_degree != 0 and section.blocks.size > 1 %} block-wrapper--crossed {% endif %}'
            {% if block.settings.font_style == 'mixed' %} with-font-mixed {% endif %}
          >
            <div
              class='scrolling-text scrolling-text--with-{{ block.settings.font_family }}-font'
              data-scrolling-text-line
            >
              {%- if block.settings.custom_icon_image != blank -%}
                <img
                  {% render 'image-attributes', image: block.settings.custom_icon_image, size: 'small', class: 'scrolling-text__icon' %}
                >
              {%- elsif block.settings.icon != 'none' -%}
                <div class='icon-container'>
                  {% if block.settings.text_color_gradient != blank %}
                    <svg class='gradient'>
                      <defs>
                        {% if gradient_type contains 'radial' %}
                          <radialGradient id='stripes'>
                              {% for gradient in gradients offset: 1 -%}
                                {%- assign tags = gradient | replace: '(' | replace: ')', ',' | split: ',' -%}
                                <stop stop-color='rgba({{ tags[0] }}, {{ tags[1] }}, {{ tags[2] }}, {{ tags[3] }})' offset='{% if tags[4] %}{{ tags[4] }}{% else %}0%{% endif %}' />
                              {%- endfor %}
                          </radialGradient>
                        {% else %}
                          <linearGradient id='stripes' x1='{{ x1 }}' y1='{{ y1 }}' x2='{{ x2 }}' y2='{{ y2 }}'>
                              {% for gradient in gradients offset: 1 -%}
                                {%- assign tags = gradient | replace: '(' | replace: ')', ',' | split: ',' -%}
                                <stop stop-color='rgba({{ tags[0] }}, {{ tags[1] }}, {{ tags[2] }}, {{ tags[3] }})' offset='{% if tags[4] %}{{ tags[4] }}{% else %}0%{% endif %}' />
                              {%- endfor %}
                          </linearGradient>
                        {% endif %}
                      </defs>
                    </svg>

                    {% assign icon_class = icon_class | append: ' scrolling-text__icon--with-gradient' %}
                  {% endif %}

                  {% render 'icon-pack', icon: block.settings.icon, class: icon_class %}
                </div>
              {%- endif -%}

              <p class='scrolling-text__text {% if block.settings.font_style == 'outline' %} scrolling-text__text--font-outline {% endif %} {% if block.settings.text_color_gradient != blank %} scrolling-text__text--color-gradient {% endif %}'>
                {{ block.settings.announcement_text }}
              </p>
            </div>

            {% if block.settings.link %}
              <a href='{{ block.settings.link }}' class='scrolling-text__url'></a>
            {% endif %}
          </scrolling-text-line>
        {% endif %}
      {% endfor %}

      {% if section.settings.section_layout == 'parallel' %}
        </div>
      {% endif %}
    </div>
  </div>
</scrolling-text>

