{%- liquid
  assign options = section.settings

  assign has_aside_blocks = false
  assign on_side_blocks = section.blocks | where: 'type', 'on_side_cart_related'

  if on_side_blocks != blank
    assign has_aside_blocks = true
  endif

  assign has_warning_placeholder = true
  for block in section.blocks
    if block.type == 'countdown' or block.type == 'in_cart_related' or block.type == 'on_side_cart_related' or block.type == 'in_cart_banner'
      if block.settings.recommendations_type == 'auto' and cart == empty
        assign has_warning_placeholder = true
      elsif block.settings.hide_for_empty_cart == false
        assign has_warning_placeholder = false

        break
      endif
    endif
  endfor
-%}

{%- if settings.cart_type == 'drawer_and_page' or settings.cart_type == 'drawer_only' -%}
  {%- unless template.name contains 'cart' -%}
    <cart-drawer
      class='cart-drawer color-{{ options.color_scheme }}'
      id='CartDrawer'
      style='display:block !important;'
      data-with-overlay
      data-with-close-on-outside
      data-with-close-on-escape
      data-overlay-important
      data-sidebar-section
      {% if cart != empty %}
        has-aside-products
      {% elsif on_side_blocks[0].settings.hide_for_empty_cart == false
        and on_side_blocks[0].settings.recommendations_type == 'manually'
      %}
        has-aside-products
      {% endif %}
      data-section-id='{{ section.id }}'
      data-open-direction='right'
      tabindex='-1'
      {% if has_warning_placeholder %}
        data-has-warning-placeholder
      {% endif %}
      {% if cart == empty and has_warning_placeholder %}
        is-empty
      {% endif %}
    >
      <template data-sidebar-template='CartDrawer'>
        <div class='cart-drawer__body' data-sidebar-body>
          <div class='hidden'>
            <div id='NewCartCount'>
              {%- if cart != empty -%}
                <div class='cart-count {% if cart.item_count > 9 %}cart-count--ellipse{% endif %}'>
                  <span aria-hidden='true'>{{ cart.item_count }}</span>
                </div>
              {%- endif -%}
            </div>
          </div>
          {% if has_aside_blocks %}
            <div class='cart-drawer__body-aside-content cart-drawer__element-for-non-empty-cart'>
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'on_side_cart_related' %}
                    {% liquid
                      assign img_ratio = block.settings.img_ratio
                      if img_ratio == 'inherited'
                        assign img_ratio = section.settings.img_ratio
                      endif
                    %}

                    <cart-drawer-related-products-block
                      class='cart-drawer__aside-block color-{{ block.settings.color_scheme }}'
                      is-aside-related-products
                      {% if block.settings.recommendations_type == 'auto' %}
                        is-auto-recommendations
                      {% endif %}
                      block-id='on-side-related-products-block-on-desktop-{{ block.id }}'
                      {{ block.shopify_attributes }}
                    >
                      {%- if block.settings.recommendations_type == 'auto' -%}
                        <cart-drawer-related-products
                          class='cart-drawer__on-side-related-products'
                          data-url='{%- if cart.items.size > 0 -%}{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ cart.items[0].product_id }}&limit={{ block.settings.cards_to_show }}{%- endif -%}'
                          id='on-side-related-products-on-desktop-{{ block.id }}'
                          data-cart-drawer-related-products
                        >
                          {%- unless cart == empty and block.settings.hide_for_empty_cart -%}
                            {% if block.settings.heading != blank %}
                              <h6 class='{{ block.settings.heading_size }} cart-drawer__on-side-related-products-heading cart-drawer__on-side-related-products-heading--with-{{ block.settings.heading_alignment }}-alignment'>
                                {{ block.settings.heading }}
                              </h6>
                            {% endif %}
                            {%- if recommendations.performed and recommendations.products_count > 0 -%}
                              <div class='cart-drawer__on-side-related-products-carousel-wrapper'>
                                <carousel-component
                                  class='card-carousel cart-drawer__on-side-related-products-carousel'
                                  data-section-id='{{ section.id }}'
                                  data-axis='y'
                                  data-with-wheel-gestures
                                  data-contain-scroll='trimSnaps'
                                  data-skip-snaps
                                  data-in-view-threshhold='1'
                                  data-drag-free
                                  data-draggable
                                  data-align='start'
                                >
                                  <div
                                    class='embla card-carousel__viewport card-carousel__viewport--vertical cart-drawer__on-side-related-products-viewport'
                                    data-carousel-viewport
                                  >
                                    <div
                                      class='card-carousel__container cart-drawer__on-side-related-products-container'
                                      data-carousel-container
                                    >
                                      {%- for recommendation in recommendations.products -%}
                                        {%- comment %}<locksmith:6234>{% endcomment -%}
                                          {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: recommendation, subject_parent: recommendations, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
                                        {%- comment %}</locksmith:6234>{% endcomment -%}
                                        <div class='card-carousel__slide cart-drawer__on-side-related-products-slide'>
                                          {% render 'vertical-product-card',
                                            product: recommendation,
                                            img_ratio: img_ratio,
                                            with_bottom_spacing: true
                                          %}
                                        </div>
                                      {%- endfor -%}
                                    </div>
                                  </div>
                                </carousel-component>
                              </div>
                            {%- endif -%}
                          {%- endunless -%}
                          {%- render 'loading-overlay',
                            class: 'cart-drawer__related-products-preloader',
                            id: 'CartDrawerInCartRelatedProductsPreloader'
                          -%}
                        </cart-drawer-related-products>
                      {%- elsif block.settings.recommendations_type == 'manually' -%}
                        {% liquid
                          assign manually_recommendation_products = (1..block.settings.cards_to_show)

                          if block.settings.featured_products != blank
                            assign manually_recommendation_products = block.settings.featured_products
                          elsif block.settings.featured_collection.products != blank
                            assign manually_recommendation_products = block.settings.featured_collection.products
                          endif
                        %}
                        <div
                          class='cart-drawer__on-side-related-products'
                          is-ready
                          data-cart-drawer-related-products
                        >
                          {%- unless cart == empty and block.settings.hide_for_empty_cart -%}
                            {% if block.settings.heading != blank %}
                              <h6 class='{{ block.settings.heading_size }} cart-drawer__on-side-related-products-heading cart-drawer__on-side-related-products-heading--with-{{ block.settings.heading_alignment }}-alignment'>
                                {{ block.settings.heading }}
                              </h6>
                            {% endif %}
                            <div class='cart-drawer__on-side-related-products-carousel-wrapper'>
                              <carousel-component
                                class='card-carousel cart-drawer__on-side-related-products-carousel'
                                data-section-id='{{ section.id }}'
                                data-axis='y'
                                data-with-wheel-gestures
                                data-contain-scroll='trimSnaps'
                                data-skip-snaps
                                data-in-view-threshhold='1'
                                data-drag-free
                                data-draggable
                                data-align='start'
                              >
                                <div
                                  class='embla card-carousel__viewport card-carousel__viewport--vertical cart-drawer__on-side-related-products-viewport'
                                  data-carousel-viewport
                                >
                                  <div
                                    class='card-carousel__container cart-drawer__on-side-related-products-container'
                                    data-carousel-container
                                  >
                                    {%- for product in manually_recommendation_products -%}
                                      {%- comment %}<locksmith:2135>{% endcomment -%}
                                        {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
                                      {%- comment %}</locksmith:2135>{% endcomment -%}
                                      <div class='card-carousel__slide cart-drawer__on-side-related-products-slide'>
                                        {% render 'vertical-product-card',
                                          product: product,
                                          img_ratio: img_ratio,
                                          with_bottom_spacing: true
                                        %}
                                      </div>
                                    {%- endfor -%}
                                  </div>
                                </div>
                              </carousel-component>
                            </div>
                          {%- endunless -%}
                        </div>
                      {%- endif -%}
                    </cart-drawer-related-products-block>
                {% endcase %}
              {% endfor %}
            </div>
          {% endif %}
          <div class='cart-drawer__body-main-content {% if has_aside_blocks %} cart-drawer__body-main-content--with-aside-content {% endif %}'>
            <cart-drawer-header class='cart-drawer__header' data-cart-drawer-header>
              <div class='cart-drawer__header-title'>
                {{ 'general.sidebar_cart.store_front.title' | t }}
                &nbsp;
                {%- if cart.item_count > 0 -%}
                  <span class='cart-drawer__header-product-count cart-drawer__element-for-non-empty-cart'>
                    {{- 'general.sidebar_cart.store_front.title_count' | t: count: cart.item_count -}}
                  </span>
                {%- endif -%}
              </div>
              <sidebar-button>
                <button
                  data-sidebar-button
                  data-sidebar-id='CartDrawer'
                  class='unstyled-button close-button-with-scale-hover-wrapper cart-drawer__header-close-button-wrapper'
                  tabindex='0'
                  aria-label='{{- 'general.sidebar_cart.screen_reader.drawer_close_button' | t -}}'
                >
                  <span class='close-button-with-scale-hover cart-drawer__header-close-button'></span>
                </button>
              </sidebar-button>
            </cart-drawer-header>
            <div class='cart-drawer__content' data-cart-drawer-viewport>
              <div class='cart-drawer__results' data-cart-drawer-results>
                <div class='cart-drawer__warning cart-drawer__element-for-empty-cart' data-cart-drawer-warning>
                  <h6 class='sidebar-cart__warning-title h6'>{{ 'general.empty_cart_page.store_front.title' | t }}</h6>
                </div>
                {%- if settings.cart_free_shipping_bar_visible -%}
                  <cart-drawer-free-shipping-bar-block class='cart-drawer__free-shipping-bar cart-drawer__element-for-non-empty-cart'>
                    {% render 'free-shipping-bar', inside_sidebar: true %}
                  </cart-drawer-free-shipping-bar-block>
                {%- endif -%}
                {% if section.blocks.size > 0 %}
                  <div class='cart-drawer__blocks cart-drawer__element-for-non-empty-cart'>
                    {% for block in section.blocks %}
                      {% case block.type %}
                        {% when '@app' %}
                          <div class='cart-drawer__block cart-drawer__app-block' {{ block.shopify_attributes }}>
                            {% render block %}
                          </div>
                        {% when 'countdown' %}
                          <cart-drawer-timer-block
                            class='cart-drawer__block color-{{ block.settings.color_scheme }} block-{{ block.id }} hidden'
                            block-id='{{ block.id }}'
                            {{ block.shopify_attributes }}
                          >
                            {%- unless cart == empty and block.settings.hide_for_empty_cart -%}
                              <div class='cart-drawer__timer-block-wrapper'>
                                {% render 'timer-block', block: block, ensure_width: false %}
                              </div>
                            {%- endunless -%}
                          </cart-drawer-timer-block>
                        {% when 'on_side_cart_related' %}
                          {% liquid
                            assign img_ratio = block.settings.img_ratio
                            if img_ratio == 'inherited'
                              assign img_ratio = section.settings.img_ratio
                            endif
                          %}

                          <cart-drawer-related-products-block
                            class='cart-drawer__block cart-drawer__block--on-mobile-only color-{{ block.settings.color_scheme }}'
                            block-id='on-side-related-products-block-on-mobile-{{ block.id }}'
                            {% if block.settings.recommendations_type == 'auto' %}
                              is-auto-recommendations
                            {% endif %}
                            {{ block.shopify_attributes }}
                          >
                            <div class='cart-drawer__in-cart-related-products-wrapper {% if block.settings.enable_color_background %} cart-drawer__in-cart-related-products-wrapper--with-background {% endif %}'>
                              {%- if block.settings.recommendations_type == 'auto' -%}
                                <cart-drawer-related-products
                                  class='cart-drawer__in-cart-related-products'
                                  data-url='{%- if cart.items.size > 0 -%}{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ cart.items[0].product_id }}&limit={{ block.settings.cards_to_show }}{%- endif -%}'
                                  id='on-side-related-products-on-mobile-{{ block.id }}'
                                  data-cart-drawer-related-products
                                  is-ready
                                >
                                  {%- unless cart == empty and block.settings.hide_for_empty_cart -%}
                                    {% if block.settings.heading != blank %}
                                      <h6 class='{{ block.settings.heading_size }} cart-drawer__in-cart-related-products-heading cart-drawer__in-cart-related-products-heading--with-{{ block.settings.heading_alignment }}-alignment'>
                                        {{ block.settings.heading }}
                                      </h6>
                                    {% endif %}
                                    {%- if recommendations.performed and recommendations.products_count > 0 -%}
                                      {% if block.settings.in_cart_related_layout contains 'carousel' %}
                                        <carousel-component
                                          class='card-carousel card-carousel--navigation-on-hover cart-drawer__card-carousel {% if block.settings.in_cart_related_layout == 'carousel-with-horizontal-cards' %} cart-drawer__card-carousel--with-horizontal-cards {% endif %} {% if block.settings.in_cart_related_layout == 'carousel-with-vertical-cards' %} cart-drawer__card-carousel--with-vertical-cards {% endif %}'
                                          data-section-id='{{ section.id }}'
                                          data-draggable
                                          data-align='start'
                                          data-axis='x'
                                          data-contain-scroll='trimSnaps'
                                          data-breakpoints='
                                            {
                                              "(max-width: 768px)": { "dragFree": true },
                                              "(min-width: 768px)": { "dragFree": false }
                                            }
                                          '
                                        >
                                          {% if block.settings.in_cart_related_layout contains 'vertical' %}
                                            <div class='card-carousel__position-btn-wrap cart-drawer__in-cart-related-btn-wrap card-carousel__position-btn-wrap--prev {% if img_ratio == 'nature' %} card-carousel__position-btn-wrap--nature-img-ratio {% endif %}'>
                                              <div class='shape shape--{{ img_ratio }}'>
                                                <carousel-btn
                                                  class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--prev cart-drawer__in-cart-related-btn cart-drawer__in-cart-related-btn--prev'
                                                  data-scroll-direction='prev'
                                                  tabindex='0'
                                                >
                                                  {% render 'icon',
                                                    icon_name: 'chevron',
                                                    class: 'carousel-btn__icon x-flip'
                                                  %}
                                                </carousel-btn>
                                              </div>
                                            </div>
                                          {% else %}
                                            <carousel-btn
                                              class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--prev cart-drawer__in-cart-related-btn cart-drawer__in-cart-related-btn--prev'
                                              data-scroll-direction='prev'
                                              tabindex='0'
                                            >
                                              {% render 'icon',
                                                icon_name: 'chevron',
                                                class: 'carousel-btn__icon x-flip'
                                              %}
                                            </carousel-btn>
                                          {% endif %}

                                          <div
                                            class='embla card-carousel__viewport card-carousel__viewport--overflow cart-drawer__in-cart-related-products-viewport'
                                            data-carousel-viewport
                                          >
                                            <div class='card-carousel__container' data-carousel-container>
                                              {%- for product in recommendations.products -%}
                                                {%- comment %}<locksmith:367b>{% endcomment -%}
                                                  {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: recommendations, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
                                                {%- comment %}</locksmith:367b>{% endcomment -%}
                                                {% if block.settings.in_cart_related_layout
                                                    == 'carousel-with-vertical-cards'
                                                %}
                                                  <div class='card-carousel__slide cart-drawer__in-cart-related-products-slide'>
                                                    {% render 'vertical-product-card',
                                                      product: product,
                                                      img_ratio: img_ratio,
                                                      data: 'in-cart-related-product'
                                                    %}
                                                  </div>
                                                {% else %}
                                                  <div class='card-carousel__slide cart-drawer__in-cart-related-products-slide'>
                                                    {% render 'horizontal-product-card',
                                                      product: product,
                                                      img_ratio: img_ratio,
                                                      data: 'in-cart-related-product',
                                                      is_inside_block_with_background: block.settings.enable_color_background
                                                    %}
                                                  </div>
                                                {% endif %}
                                              {%- endfor -%}
                                            </div>
                                          </div>

                                          {% if block.settings.in_cart_related_layout contains 'vertical' %}
                                            <div class='card-carousel__position-btn-wrap cart-drawer__in-cart-related-btn-wrap card-carousel__position-btn-wrap--next {% if img_ratio == 'nature' %} card-carousel__position-btn-wrap--nature-img-ratio {% endif %}'>
                                              <div class='shape shape--{{ img_ratio }}'>
                                                <carousel-btn
                                                  class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--next cart-drawer__in-cart-related-btn cart-drawer__in-cart-related-btn--next'
                                                  data-scroll-direction='next'
                                                  tabindex='0'
                                                >
                                                  {%- render 'icon',
                                                    icon_name: 'chevron',
                                                    class: 'carousel-btn__icon'
                                                  -%}
                                                </carousel-btn>
                                              </div>
                                            </div>
                                          {% else %}
                                            <carousel-btn
                                              class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--next cart-drawer__in-cart-related-btn cart-drawer__in-cart-related-btn--next'
                                              data-scroll-direction='next'
                                              tabindex='0'
                                            >
                                              {%- render 'icon', icon_name: 'chevron', class: 'carousel-btn__icon' -%}
                                            </carousel-btn>
                                          {% endif %}
                                        </carousel-component>
                                      {% else %}
                                        {% if block.settings.in_cart_related_layout contains 'vertical' %}
                                          <div class='cart-drawer-products-block__grid  cart-drawer-products-block__grid--vertical'>
                                            {% for recommendation in recommendations.products %}
                                              {%- comment %}<locksmith:be46>{% endcomment -%}
                                                {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: recommendation, subject_parent: recommendations, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
                                              {%- comment %}</locksmith:be46>{% endcomment -%}
                                              {% render 'vertical-product-card',
                                                product: recommendation,
                                                img_ratio: img_ratio,
                                                data: 'in-cart-related-product'
                                              %}
                                            {% endfor %}
                                          </div>
                                        {% else %}
                                          <div class='cart-drawer-products-block__grid cart-drawer-products-block__grid--horizontal'>
                                            {% for recommendation in recommendations.products %}
                                              {%- comment %}<locksmith:3ccc>{% endcomment -%}
                                                {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: recommendation, subject_parent: recommendations, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
                                              {%- comment %}</locksmith:3ccc>{% endcomment -%}
                                              {% render 'horizontal-product-card',
                                                product: recommendation,
                                                img_ratio: img_ratio,
                                                data: 'in-cart-related-product',
                                                is_inside_block_with_background: block.settings.enable_color_background
                                              %}
                                            {% endfor %}
                                          </div>
                                        {% endif %}
                                      {% endif %}
                                    {%- endif -%}
                                    {%- render 'loading-overlay',
                                      class: 'cart-drawer__related-products-preloader',
                                      id: 'CartDrawerInCartRelatedProductsPreloader'
                                    -%}
                                  {%- endunless -%}
                                </cart-drawer-related-products>
                              {%- elsif block.settings.recommendations_type == 'manually' -%}
                                {% liquid
                                  assign manually_recommendation_products = (1..block.settings.cards_to_show)

                                  if block.settings.featured_products != blank
                                    assign manually_recommendation_products = block.settings.featured_products
                                  elsif block.settings.featured_collection.products != blank
                                    assign manually_recommendation_products = block.settings.featured_collection.products
                                  endif
                                %}
                                <div
                                  class='cart-drawer__in-cart-related-products'
                                  data-cart-drawer-related-products
                                  is-ready
                                >
                                  {%- unless cart == empty and block.settings.hide_for_empty_cart -%}
                                    {% if block.settings.heading != blank %}
                                      <h6 class='{{ block.settings.heading_size }} cart-drawer__in-cart-related-products-heading cart-drawer__in-cart-related-products-heading--with-{{ block.settings.heading_alignment }}-alignment'>
                                        {{ block.settings.heading }}
                                      </h6>
                                    {% endif %}

                                    {% if block.settings.in_cart_related_layout contains 'carousel' %}
                                      <carousel-component
                                        class='card-carousel card-carousel--navigation-on-hover cart-drawer__card-carousel {% if block.settings.in_cart_related_layout == 'carousel-with-horizontal-cards' %} cart-drawer__card-carousel--with-horizontal-cards {% endif %} {% if block.settings.in_cart_related_layout == 'carousel-with-vertical-cards' %} cart-drawer__card-carousel--with-vertical-cards {% endif %}'
                                        data-section-id='{{ section.id }}'
                                        data-draggable
                                        data-align='start'
                                        data-axis='x'
                                        data-contain-scroll='trimSnaps'
                                        data-breakpoints='
                                          {
                                            "(max-width: 768px)": { "dragFree": true },
                                            "(min-width: 768px)": { "dragFree": false }
                                          }
                                        '
                                      >
                                        {% if block.settings.in_cart_related_layout contains 'vertical' %}
                                          <div class='card-carousel__position-btn-wrap cart-drawer__in-cart-related-btn-wrap card-carousel__position-btn-wrap--prev {% if img_ratio == 'nature' %} card-carousel__position-btn-wrap--nature-img-ratio {% endif %}'>
                                            <div class='shape shape--{{ img_ratio }}'>
                                              <carousel-btn
                                                class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--prev cart-drawer__in-cart-related-btn cart-drawer__in-cart-related-btn--prev'
                                                data-scroll-direction='prev'
                                                tabindex='0'
                                              >
                                                {% render 'icon',
                                                  icon_name: 'chevron',
                                                  class: 'carousel-btn__icon x-flip'
                                                %}
                                              </carousel-btn>
                                            </div>
                                          </div>
                                        {% else %}
                                          <carousel-btn
                                            class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--prev cart-drawer__in-cart-related-btn cart-drawer__in-cart-related-btn--prev'
                                            data-scroll-direction='prev'
                                            tabindex='0'
                                          >
                                            {% render 'icon',
                                              icon_name: 'chevron',
                                              class: 'carousel-btn__icon x-flip'
                                            %}
                                          </carousel-btn>
                                        {% endif %}

                                        <div
                                          class='embla card-carousel__viewport card-carousel__viewport--overflow cart-drawer__in-cart-related-products-viewport'
                                          data-carousel-viewport
                                        >
                                          <div class='card-carousel__container' data-carousel-container>
                                            {%- for product in manually_recommendation_products
                                              limit: block.settings.cards_to_show
                                            -%}
                                              {% if block.settings.in_cart_related_layout
                                                  == 'carousel-with-vertical-cards'
                                              %}
                                                <div class='card-carousel__slide cart-drawer__in-cart-related-products-slide'>
                                                  {% render 'vertical-product-card',
                                                    product: product,
                                                    img_ratio: img_ratio,
                                                    data: 'in-cart-related-product'
                                                  %}
                                                </div>
                                              {% else %}
                                                <div class='card-carousel__slide cart-drawer__in-cart-related-products-slide'>
                                                  {% render 'horizontal-product-card',
                                                    product: product,
                                                    img_ratio: img_ratio,
                                                    data: 'in-cart-related-product',
                                                    is_inside_block_with_background: block.settings.enable_color_background
                                                  %}
                                                </div>
                                              {% endif %}
                                            {%- endfor -%}
                                          </div>
                                        </div>

                                        {% if block.settings.in_cart_related_layout contains 'vertical' %}
